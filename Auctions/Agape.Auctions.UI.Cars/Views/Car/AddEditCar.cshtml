        //if (!$("#txtTrim").val())
        //    lstInvalidControls.push('txtTrim');
        if (!$("#txtColor").val())
            lstInvalidControls.push('txtColor');
        if (!$("#txtDescription").val())
            lstInvalidControls.push('txtDescription');

        console.log(lstInvalidControls);

        if (lstInvalidControls.length > 0 || lstInvalidCmbControls.length > 0) {
            lstInvalidControls.forEach(function (controlItem) {
                $("#" + controlItem).addClass("is-invalid");
            });

            lstInvalidCmbControls.forEach(function (controlItem) {
                console.log($("#" + controlItem).closest("div"));
                $("#" + controlItem).closest("div").addClass("is-invalid");
            });

            return false;
        }
        else {
            if ($("#txtVin").val().length != 17) {
                showMessage("Vin should be 17 Characters, Please enter a valid VIN", "error");
                e.preventDefault();
            }
            else if (!vinValidated) {
                showMessage("Please enter a valid VIN", "error");
                e.preventDefault();
            }
        }
        return true;
    }

