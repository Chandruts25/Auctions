        //    lstInvalidControls.push('txtOwner');
        if (!$("#txtMileage").val())
            lstInvalidControls.push('txtMileage');
        if (!$("#txtVin").val())
            lstInvalidControls.push('txtVin');
        if (!$("#txtSalePrice").val())
            lstInvalidControls.push('txtSalePrice');
        if ($("#cmbStatus").val() == "0")
            lstInvalidCmbControls.push('cmbStatus');
        if ($("#cmbMake").val()== "0")
            lstInvalidCmbControls.push('cmbMake');
        if ($("#cmbModel").val() == "0")
