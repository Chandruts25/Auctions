    function bindCarModel(modelId) {
        if ($("#cmbMake").val() && $("#cmbMake").val() != "0") {
            var pUrl = "/Car/GetCarModelDetails?carMakeId=" + $("#cmbMake").val();
                $.ajax({
                    type: "GET",
                    url: pUrl,
                    dataType: "json",
                    success: function (data) {
                        if (data != null) {
                            if (data.result == true) {
                                var drpModel = $('#cmbModel');
                                drpModel.empty();
                                $.each(data.modelDetails, function (index, item) {
                                    drpModel.append(
                                        $('<option>', {
                                            value: item.model_ID,
                                            text: item.model_Name
                                        }, '</option>'))
                                });
                                if (modelId) {
                                    $('#cmbModel').val(modelId).select2();
                                }
                                else {
                                    $('#cmbModel').val(0).select2();
                                }
                            }
                            else {
                                resetModelDropDown();
