    function reorderImages() {
        if (isReordered) {
            var imageIds = [];
            $(".clsImages").each(function (i, v) {
                console.log(v);
                var imageId = v.id;
                imageIds.push(imageId);
            });

            console.log(imageIds);
            $.ajax(
                {
                    url: "/Car/ReorderImages",
                    data: { lstImages: imageIds},
                    type: "POST",
                    success: function (data) {
                        if (data.result == false)
                            showMessage("Error while save the reordered images, Error Details" + data.message, "error");
                        else {
                            showMessage("Reordered images updated successfully", "success");
                            videogo();
                        }
                    }
                });
        }
        else {
            videogo();
            //showMessage("You have not reordered any images. Please reorder then save", "alert alert-danger");
        }
    }

    function uploadFiles(inputId) {
        var input = document.getElementById(inputId);
        var files = input.files;
        var formData = new FormData();

        if (files.length > 0) {

            for (var i = 0; i != files.length; i++) {
                formData.append("files", files[i]);
            }
            var currentImageCount = $(".listitemClass").length;

            formData.append("carId", $("#hdnId").val());
            formData.append("currentImageCount", currentImageCount);

            $.ajax(
                {
                    url: "/Car/UploadCarImages",
                    data: formData,
                    processData: false,
                    contentType: false,
                    type: "POST",
                    success: function (data) {
                        if (data.result == false)
                            showMessage("Error while save the image, Error Details" + data.message, "error");
                        else {

                            if (data.count > 1) {
                                showMessage("Car Images uploaded successfully", "success");
                            }
                            else {
                                showMessage("Car Image uploaded successfully", "success");
                            }

                            $('#divCarImages').load("/Car/CarImages?view=CarImages&id=" + encodeURIComponent($("#hdnId").val()) + "");
                        }
                        $("#files").val("");
                    }
                }
            );
        }
        else {
            showMessage("Please select the images to upload", "error");
        }
    }

    function deleteCarImage(imageId,imageUrl) {
        if (!confirm("Are you sure want to delete the selected car image?")) {
            return false;
        }

        var carId = $("#hdnId").val();
        $.ajax(
            {
                url: "/Car/RemoveCarImage",
                data: { carImageId: imageId, imageUrl: imageUrl, carId: carId },
                type: "POST",
                success: function (data) {
                    if (data.result == false)
                        showMessage("Error while delete the car image, Error Details" + data.message, "error");
                    else {
                        showMessage("Car Image successfully deleted", "success");
                        $('#divCarImages').load("/Car/CarImages?view=CarImages&id=" + encodeURIComponent($("#hdnId").val()) + "");
                    }
                }
            });
    }

