@model DataAccessLayer.Models.User
@{
    if (!string.IsNullOrWhiteSpace(ViewBag.Layout))
    {
        Layout = "~/Views/Shared/" + ViewBag.Layout;
    }
    else
    {
        Layout = "_Layout_Page";
    }

    var stateId = "";
    var CountryId = "";
    if (Model.PaymentMethods != null && Model.PaymentMethods.Any())
    {
        CountryId = Model.PaymentMethods[0];
        stateId = Model.PaymentMethods[1];
    }

}

<div class="top3-wrapper novi-background bg-cover">
    <div class="container">
        <div class="top2 clearfix">

            <div class="row">

                <div class="col-md-6">
                    <h4> <b> My Dealership Confirmation </b> </h4>
                </div>

                <div class="col-md-6 float-right">

                </div>

            </div>

        </div>

    </div>
</div>


<div class="container">
    <div class="row" id="divShowErrorSuccess">
        <div class="col-md-12" id="divDetailText">

        </div>
    </div>
</div>


<div class="content section-md-bottom novi-background bg-cover">

        <div class="container">
            <form id="dealerShipForm" action="/CreateDealerShip" method="POST">
                <div class="row row-fix">
                    <div class="col-sm-12 col-md-12 column-content">

                        <div class="col-md-12 tab-content-border">

                            <div class="row">

                                <div class="col-md-12 mb-3">


                                    <div class="responsive-table">

                                        <table class="table table-striped table-bordered">

                                            <tbody>
                                                <tr>
                                                    <td><label class="">Company Name   :</label></td>
                                                    <td class="car-spec">@Model.CompanyName</td>

                                                </tr>
                                                <tr>
                                                    <td><label class="">Company Phone :</label></td>
                                                    <td class="car-spec">@Model.Phone</td>

                                                </tr>
                                                <tr>
                                                    <td><label class="">Country   :</label></td>
                                                    <td class="car-spec">@Model.Address.Country</td>

                                                </tr>

                                                <tr>
                                                    <td><label class="">State   :</label></td>
                                                    <td class="car-spec">@Model.Address.State</td>
                                                </tr>

                                                <tr>
                                                    <td><label class="">City   :</label></td>
                                                    <td class="car-spec">@Model.Address.City</td>
                                                </tr>

                                                <tr>
                                                    <td><label class="">Street   :</label></td>
                                                    <td class="car-spec">@Model.Address.Street</td>
                                                </tr>

                                                <tr>
                                                    <td><label class="">Zip   :</label></td>
                                                    <td class="car-spec">@Model.Address.Zip</td>
                                                </tr>

                                            </tbody>
                                        </table>
                                    </div>

                                    <div class="responsive-table">

                                        <table class="table table-striped table-bordered">

                                            <tbody>
                                                <tr>
                                                    <td width="100%"><label class="">This would cost $99.00 to create the dealership</label></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>

                                </div>


                            </div>

                            <div class="row mt-20">
                                <div class="col-md-12 mb-12">
                                    <div class="float-right">
                                        <input type="hidden" name="hdnDealerId" value="@Model.Id" />
                                        <input type="hidden" name="txtCompanyName" value="@Model.CompanyName" />
                                        <input type="hidden" name="txtCompanyPhone" value="@Model.Phone" />
                                        <input type="hidden" name="hdnFirstName" value="@Model.FirstName" />
                                        <input type="hidden" name="hdnLastName" value="@Model.LastName" />
                                        <input type="hidden" name="hdnEmailAddress" value="@Model.Email" />
                                        <input type="hidden" name="UserType" value="@Model.UserType" />
                                        <input type="hidden" name="Idp" value="@Model.Idp" />
                                        <input type="hidden" name="hdnPassword" value="@Model.Password" />
                                        <input type="hidden" name="hdnProfileUrl" value="@Model.ProfileUrl" />
                                        <input type="hidden" name="hdnCountryValue" value="@CountryId" />
                                        <input type="hidden" name="txtStreet" value="@Model.Address.Street" />
                                        <input type="hidden" name="txtCity" value="@Model.Address.City" />
                                        <input type="hidden" name="cmbState" value="@stateId" />
                                        <input type="hidden" name="txtZip" value="@Model.Address.Zip" />
                                        <input type="submit"  class="btn btn-success" value="Pay - $99.00" />
                                        @*<button type="button" id="saveDealer" class="btn btn-success" onclick="payDealerShipAmount()">Pay - $99.00</button>*@
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>

        </div>
</div>
